            <iframe
              class="absolute top-0 left-0 w-full h-full rounded-lg"
              src="CV/CV.pdf"
              loading="lazy"
            ></iframe>
          </div>
        </div>
      </div>
    </div>
  </section>
  
  <script>
    function downloadPDF(url: string): void {
        const link = document.createElement('a');
        link.href = url;
        link.download = '/CV/CV.pdf';
        link.click();
    }
  </script>